<?xml version="1.0" encoding="utf-8"?>


                                                   

    

                                                                              

                 
                       
                                      

           

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/item_home_list_0" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            app:cardElevation="@dimen/dp_1"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/itemHomeLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"

                android:orientation="vertical"
                app:layout_constraintBaseline_toTopOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/itemUserHead"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:background="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:tag="binding_1"      
                        android:textColor="@color/black_FF171616"
                        tools:text="作者" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:tag="binding_2"             
                        tools:text="时间" />


                    <TextView
                        android:id="@+id/itemHomeTopTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        tools:text="置顶" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <TextView
                    android:id="@+id/itemHomeListTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:tag="binding_3"     
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="我是标题" />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/itemHomeChapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:tag="binding_4"                
                        android:textColor="@color/teal_700"
                        android:textSize="@dimen/sp_14"
                        tools:text="专栏名称" />

                    <ImageView
                        android:id="@+id/itemHomeCollect"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/img_collect_grey" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

         

